#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

&mt {
    tapping-term-ms = <150>;
    flavor = "balanced";
};

/ {
    chosen {
        zmk,matrix_transform = &default_transform;

        // zmk,matrix_transform = &five_column_transform;
    };
};

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD0";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;

            tapping-term-ms = <150>;
        };

        td1: td1 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD1";
            #binding-cells = <0>;
            bindings = <&mo 1>, <&kp LEFT_GUI>;

            tapping-term-ms = <150>;
        };

        td2: td2 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD2";
            #binding-cells = <0>;
            bindings = <&kp LCTRL>, <&mo 2>;

            tapping-term-ms = <150>;
        };

        td3: td3 {
            compatible = "zmk,behavior-tap-dance";
            label = "TD3";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ALT>, <&mo 4>;

            tapping-term-ms = <150>;
        };
    };

    combos {
        compatible = "zmk,combos";

        bksp {
            bindings = <&kp BACKSPACE>;
            key-positions = <20 21>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <0 1>;
        };

        Delete {
            bindings = <&kp DEL>;
            key-positions = <1 2>;
        };

        num1 {
            bindings = <&kp KP_NUMBER_1>;
            key-positions = <13 14>;
        };

        num2 {
            bindings = <&kp KP_N2>;
            key-positions = <14 15>;
        };

        num3 {
            bindings = <&kp KP_N3>;
            key-positions = <26 27>;
        };

        num4 {
            bindings = <&kp KP_N4>;
            key-positions = <25 26>;
        };

        num5 {
            bindings = <&kp KP_N5>;
            key-positions = <15 16>;
        };

        num6 {
            bindings = <&kp KP_NUMBER_6>;
            key-positions = <27 28>;
        };

        num7 {
            bindings = <&kp KP_NUMBER_7>;
            key-positions = <25 14>;
        };

        num8 {
            bindings = <&kp KP_N8>;
            key-positions = <26 15>;
        };

        num9 {
            bindings = <&kp KP_N9>;
            key-positions = <27 16>;
        };

        num0 {
            bindings = <&kp KP_N0>;
            key-positions = <14 27>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base {
            display-name = "BASE";
            bindings = <
&kp TAB         &kp Q  &kp W  &kp E  &kp R         &kp T        &kp Y      &kp U  &kp I      &kp O    &kp P         &kp COLON
&kp LEFT_SHIFT  &kp A  &kp S  &kp D  &kp F         &kp G        &kp H      &kp J  &kp K      &kp L    &kp APOS      &kp RSHFT
&kp LCTRL       &kp Z  &kp X  &kp C  &kp V         &kp B        &kp N      &kp M  &kp COMMA  &kp DOT  &kp QUESTION  &mo 3
                              &mo 1  &kp LEFT_ALT  &kp SPACE    &kp ENTER  &mo 2  &mo 1
            >;
        };

        numpad_media {
            display-name = "NUM";
            bindings = <
&kp ENTER  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_N9        &kp KP_PLUS   &kp SCROLLLOCK      &none   &none   &none   &kp C_VOLUME_DOWN  &kp C_VOLUME_UP  &kp C_MUTE
&mo 2      &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_N6        &kp KP_MINUS  &kp PAUSE_BREAK     &none   &none   &none   &kp C_PREV         &kp C_NEXT       &kp C_PLAY_PAUSE
&mo 4      &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp KP_N0     &kp LS(LG(LEFT))    &none   &none   &none   &none              &none            &none
                                             &trans           &trans        &trans              &trans  &trans  &trans
            >;
        };

        function_nav {
            display-name = "FUNCTION";
            bindings = <
&trans     &kp F7  &kp F8  &kp F9  &kp F12  &none     &none   &none   &kp HOME        &kp UP_ARROW    &kp PAGE_UP    &kp PRINTSCREEN
&mo 2      &kp F4  &kp F5  &kp F6  &kp F11  &none     &none   &none   &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT      &kp LEFT_SHIFT
&kp LCTRL  &kp F1  &kp F2  &kp F3  &kp F10  &none     &none   &none   &kp END         &kp INSERT      &kp PAGE_DOWN  &kp LCTRL
                           &trans  &trans   &trans    &trans  &trans  &trans
            >;
        };

        symbol {
            bindings = <
&none  &kp STAR     &kp CARET      &kp GRAVE      &kp TILDE  &bt BT_CLR      &bt BT_SEL 2     &kp LEFT_BRACE  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp RIGHT_BRACE  &none
&none  &kp PERCENT  &kp DOLLAR     &kp AMPERSAND  &kp MINUS  &bt BT_SEL 0    &rgb_ug RGB_TOG  &kp UNDER       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp SEMI         &none
&none  &kp SLASH    &kp BACKSLASH  &kp PIPE       &kp PLUS   &bt BT_SEL 1    &rgb_ug RGB_HUI  &kp EQUAL       &kp HASH              &kp AT_SIGN            &kp EXCLAMATION  &none
                                   &trans         &trans     &trans          &trans           &trans          &trans
            >;

            label = "SYMBOL";
        };

        mirror {
            bindings = <
&none           &kp Y  &kp U  &kp I      &kp O    &kp P       &none  &none  &none  &none  &none  &none
&kp LEFT_SHIFT  &kp H  &kp J  &kp K      &kp L    &kp SEMI    &none  &none  &none  &none  &none  &none
&kp LCTRL       &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH    &none  &none  &none  &none  &none  &none
                              &trans     &trans   &trans      &none  &none  &none
            >;

            label = "MIRROR";
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };
};
